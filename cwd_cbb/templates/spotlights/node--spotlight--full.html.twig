{% extends "node.html.twig" %}
{% block content %}

<div class="cwd-component cwd-basic cwd-spotlight full">

  {% if node.field_spotlight_category.value or node.field_supplemental_text.value -%}
    <h4 class="sr-only">Spotlight metadata</h4>
    <div class="metadata-set high-margin">
      {% if node.field_spotlight_category.value -%}
        <div class="field category field-emphasize">
          {{- node.field_spotlight_category[0].entity.name.value -}}
        </div>
      {% endif %}
      {% if node.field_supplemental_text.value -%}
        <div class="field date supplemental-utility">
          {{- node.field_supplemental_text.value -}}
        </div>
      {% endif %}
    </div>
  {%- endif %}

  {% include "@cwd_cbb/partials/incl--article-image.html.twig" %}
  {% if node.field_destination_url.value -%}
    <div class="field-destination high-margin">
      <p><strong class="tutorial note">Note:</strong> This spotlight features content from another page. <a href="{{ node.field_destination_url.0.url }}">View the featured content</a> for this spotlight.</p>
    </div>
  {% endif %}

  {{ node.body|view('full') }}

</div>
{% endblock %}
