{% extends "node.html.twig" %}
{% block title -%}{% endblock %}
{% block content -%}

  {% set destination_url = url %}
  {%- if node.field_destination_url.value -%}
    {% set destination_url = node.field_destination_url.0.url %}
  {%- endif -%}

  <div class="group-image">
    <a href="{{ destination_url }}">
      {% include "@cwd_cbb/partials/incl--default-image.html.twig" with {
        'default_image_src': '/themes/custom/cwd_base/images/cwd_utilities/photo_placeholder_square.svg',
      } %}
      {% include "@cwd_cbb/partials/incl--title.html.twig" %}
    </a>
  </div>

  {% if node.field_person_role.value or node.field_person_affiliation.value -%}
    <div class="group-fields">
      {% if node.field_person_role.value -%}
        <h4 class="subheading">{{ node.field_person_role.value }}</h4>
      {% endif %}
      {% if node.field_person_affiliation.value -%}
        <h4 class="subheading subheading-secondary base-font affiliation">{{ node.field_person_affiliation.value }}</h4>
      {% endif %}
    </div>
  {% endif %}

{% endblock %}
