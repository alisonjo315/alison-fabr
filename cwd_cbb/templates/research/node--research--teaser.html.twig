{% extends "node.html.twig" %}
{% block title -%}{% endblock %}
{% block content -%}

  {# This view mode is used for research bands. #}
  <div class="group-image">
    <a href="{{ url }}">
      {% set image_src = '/themes/custom/cwd_cbb/images/research_placeholder_480x450.jpg' %}
      {% if node.field_image.0.value -%}
        {% set image_src = file_url(node.field_image[0].entity.field_media_image.entity.uri.value | image_style('home_research')) %}
      {%- endif %}
      <img src="{{ image_src }}" alt="">
      {% include "@cwd_cbb/partials/incl--title.html.twig" with {
        'truncate_label': true,
        'label_max': 83,
      } %}
    </a>
  </div>

{% endblock %}
