{% extends "node.html.twig" %}
{% block title -%}{% endblock %}
{% block content -%}

  <div class="group-image">
    <a href="{{ url }}">
      {% include "@cwd_cbb/partials/incl--default-image.html.twig" with {
        'default_image_src': '/themes/custom/cwd_cbb/images/research_placeholder_square.jpg',
      } %}
      {% include "@cwd_cbb/partials/incl--title.html.twig" with {
        'truncate_label': true,
        'label_max': 83,
      } %}
    </a>
  </div>
  {% if node.field_theme.value -%}
    <div class="group-fields">
      <div class="metadata-set metadata-blocks high-margin">
        <h2 class="sr-only">Research Theme</h2>
        <div class="field research-theme">
          <span class="deco">{{- node.field_theme[0].entity.name.value -}}</span>
        </div>
      </div>
    </div>
  {% endif %}

{% endblock %}
